@model IEnumerable<BunproApp.Models.Todo>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3> This is Index to TodosController</h3>

@*<ul>
    <li>Id: @Model.Id</li>
    <li>Description: @Model.Description</li>
    <li>DueDate: @Model.DueDate.ToString("d")</li>
</ul>*@

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Description</th>
            <th scope="col">Due Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Description</td>
                <td>@item.DueDate.ToString("d")</td>
            </tr>
        }

    </tbody>
</table>

